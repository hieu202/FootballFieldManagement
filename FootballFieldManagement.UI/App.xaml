<Application x:Class="FootballFieldManagement.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FootballFieldManagement.UI"
             xmlns:vm="clr-namespace:FootballFieldManagement.UI.ViewModels"
             xmlns:view="clr-namespace:FootballFieldManagement.UI.Views">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <view:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:RegisterViewModel}">
            <view:RegisterView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MainContentViewModel}">
            <view:MainContentView />
        </DataTemplate>
    </Application.Resources>
</Application>
